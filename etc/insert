#!/bin/sh
# Uncomment the following line if you want the kdialog and mount commands to be ran
# as some other user
#set_user="curro"

export DISPLAY=:0.0
[ -n "$set_user" ] && export XAUTHORITY=/home/$set_user/.Xauthority 

KDIALOG="/usr/kde/3.5/bin/kdialog --warningcontinuecancel \"Insert volume: \\\"$1\\\"\" --name offlinefs --caption offlinefs"
MOUNT="mount $2"
if [ -n "$set_user" ]; then 
    su -c "$KDIALOG && $MOUNT" $set_user
else
    sh -c "$KDIALOG && $MOUNT"
fi
